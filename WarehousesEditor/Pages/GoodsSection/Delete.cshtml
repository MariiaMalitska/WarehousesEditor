@page
@model WarehousesEditor.Pages.GoodsSection.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Goods</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Goods.GoodsName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Goods.GoodsName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Goods.BaseCurrencyPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Goods.BaseCurrencyPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Goods.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Goods.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Goods.BarcodeNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Goods.BarcodeNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Goods.Currency)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Goods.Currency.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GoodsCategories)
        </dt>
        <dd class="col-sm-10">
            @foreach (var category in Model.GetCategories(Model.Goods.GoodsId))
            {
                <p>@category.Category.CategoryName</p>
            }
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Goods.GoodsId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>

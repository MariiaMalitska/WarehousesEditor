@page
@model WarehousesEditor.Pages.GoodsSection.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Goods</h4>
@Html.ValidationSummary(false, "", new { @class = "text-danger" })
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Goods.GoodsName" class="control-label"></label>
                <input asp-for="Goods.GoodsName" class="form-control" />
                <span asp-validation-for="Goods.GoodsName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Goods.BaseCurrencyPrice" class="control-label"></label>
                <input asp-for="Goods.BaseCurrencyPrice" class="form-control" />
                <span asp-validation-for="Goods.BaseCurrencyPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Goods.CurrencyId" class="control-label"></label>
                <select asp-for="Goods.CurrencyId" class="form-control" asp-items="ViewBag.CurrencyId"></select>
                <span asp-validation-for="Goods.CurrencyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Goods.GoodsCategories" class="control-label">Categories (You can choose multiple)</label>
                <select multiple="multiple" name="Categories" asp-items="ViewBag.Categories" size="8"></select>
                <span asp-validation-for="Goods.GoodsCategories" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

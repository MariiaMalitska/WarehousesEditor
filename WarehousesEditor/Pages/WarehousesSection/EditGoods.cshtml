@page
@model WarehousesEditor.Pages.WarehousesSection.EditGoodsModel

@{
    ViewData["Title"] = "EditGoods";
}

<h1>EditGoods</h1>

<h4>WarehouseGoods</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.WarehouseGoods.Warehouse.WarehouseName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.WarehouseGoods.Warehouse.WarehouseName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.WarehouseGoods.Goods.GoodsName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.WarehouseGoods.Goods.GoodsName)
            </dd>
            <input type="hidden" asp-for="WarehouseGoods.WarehouseId" />
            <input type="hidden" asp-for="WarehouseGoods.GoodsId" />
            <div class="form-group">
                <label asp-for="WarehouseGoods.Amount" class="control-label"></label>
                <input asp-for="WarehouseGoods.Amount" class="form-control" />
                <span asp-validation-for="WarehouseGoods.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
